<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:background="#ffffff"
    >
 <LinearLayout

     android:layout_marginTop="50dp"
     android:id="@+id/linearLayout_notification"
     android:layout_width="wrap_content"
     android:layout_height="50dp">

  <TextView
      android:id="@+id/msg_notification"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:textColor="@color/color1"
      android:textSize="22dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="14dp"
      android:text="接收新消息通知"/>

  <Switch
      android:id="@+id/switch_notification"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_toRightOf="@id/msg_notification"
      android:layout_centerVertical="true"
      android:layout_marginLeft="60dp"
      android:thumb="@drawable/thumb"
      android:track="@drawable/track"/>

 </LinearLayout>

 <LinearLayout
     android:id="@+id/linearLayout_msg_details"
     android:visibility="gone"
     android:layout_width="wrap_content"
     android:layout_height="50dp">
  <TextView
      android:id="@+id/msg_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:textSize="22dp"
      android:layout_marginLeft="9dp"
      android:textColor="@color/color1"
      android:layout_marginRight="20dp"
      android:text="通知显示消息详情"/>

  <Switch
      android:id="@+id/switch_msg_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/msg_details"
      android:layout_centerVertical="true"
      android:layout_marginLeft="30dp"
      android:thumb="@drawable/thumb"
      android:track="@drawable/track"/>

 </LinearLayout>

 <LinearLayout
     android:id="@+id/linearLayout_msg_sound"
     android:visibility="gone"
     android:layout_width="wrap_content"
     android:layout_height="50dp">

  <TextView
      android:id="@+id/msg_sound"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:textSize="22dp"
      android:textColor="@color/color1"
      android:layout_marginLeft="11dp"
      android:text="声音"/>

  <Switch
      android:id="@+id/switch_msg_sound"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/msg_sound"
      android:layout_centerVertical="true"
      android:layout_marginLeft="180dp"
      android:thumb="@drawable/thumb"
      android:track="@drawable/track"/>

 </LinearLayout>

 <LinearLayout
     android:id="@+id/linearLayout_msg_hint"
     android:visibility="gone"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">

  <TextView
      android:id="@+id/msg_hint"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:textSize="22dp"
      android:textColor="@color/color1"
      android:layout_marginLeft="26dp"
      android:text="新消息提示音"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/msg_hint"
      android:layout_centerVertical="true"
      android:layout_marginLeft="170dp"
      android:text=""
      />

 </LinearLayout>

 <LinearLayout
     android:id="@+id/linearLayout_msg_shake"
     android:visibility="gone"
     android:layout_width="wrap_content"
     android:layout_height="50dp">

  <TextView
      android:id="@+id/msg_shake"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:textSize="22dp"
      android:textColor="@color/color1"
      android:layout_marginLeft="11dp"
      android:text="振动"/>

  <Switch
      android:id="@+id/switch_msg_shake"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/msg_sound"
      android:layout_centerVertical="true"
      android:layout_marginLeft="180dp"
      android:thumb="@drawable/thumb"
      android:track="@drawable/track"/>

 </LinearLayout>


</LinearLayout>

